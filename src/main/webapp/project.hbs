<script>

    var apiUrl = '/api/v1/projects/1/summary/actual';
    var reportResolver = new ReportResolver();

    $.ajax({
        url: apiUrl,
        type: 'get',
        dataType: 'json',
        success: function (summary) {
            for (i = 0; i < summary.reprots.length; i++) {
                reportResolver.resolve(summary.reprots[i], "#reports");
            }
        },
        xhrFields: {
            withCredentials: true
        }
    });


